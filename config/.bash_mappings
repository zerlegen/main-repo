
#-------------------------------------------------------------------------------- 
# CYGWIN BINARIES

## binary locations

### hardware

BIN_ARCH=/usr/bin/arch
BIN_AS=/usr/bin/as

### programming/languages

BIN_AWK=/usr/bin/awk
BIN_GCC=/usr/bin/gcc

### file binaries

BIN_BZIP2=/usr/bin/bzip2
BIN_DOS2UNIX=/usr/bin/dos2unix
BIN_UNIX2DOS=/usr/bin/unix2dos

BIN_CP=/usr/bin/cp

### misc binaries

BIN_BASE64=/usr/bin/base64
BIN_BASENAME=/usr/bin/basename


BIN_CAL=/usr/bin/cal

BIN_CHCON=/usr/bin/chcon
BIN_CHMOD=/usr/bin/chmod
BIN_CHOWN=/usr/bin/chown
BIN_CHGRP=/usr/bin/chgrp

BIN_CKSUM=/usr/bin/cksum
BIN_CRC32=/usr/bin/crc32
BIN_MD5SUM=/usr/bin/md5sum
BIN_SHA256SUM=/usr/bin/sha256sum
BIN_SHA384SUM=/usr/bin/sha384sum
BIN_SHA512SUM=/usr/bin/sha512sum

BIN_CURL=/usr/bin/curl

BIN_DATE=/usr/bin/date

BIN_DD=/usr/bin/dd
BIN_DF=/usr/bin/df
BIN_DU=/usr/bin/du
BIN_EXPAND=/usr/bin/expand
BIN_FACTOR=/usr/bin/factor
BIN_FILE=/usr/bin/file
BIN_FIND=/usr/bin/find
BIN_FTP=/usr/bin/ftp

BIN_GPP="/usr/bin/g++"
BIN_GDB=/usr/bin/gdb
BIN_GETFACL=/usr/bin/getfacl
BIN_KILL="/usr/bin/kill.exe"
BIN_GPG=/usr/bin/gpg
BIN_GPGSPLIT=/usr/bin/gpgsplit
BIN_GPGV=/usr/bin/gpgv
BIN_GPGZIP=/usr/bin/gpg-zip
BIN_GREP=/usr/bin/grep
BIN_GZIP=/usr/bin/gzip

BIN_GROUPS=/usr/bin/groups
BIN_HEXDUMP=/usr/bin/hexdump
BIN_HOSTID=/usr/bin/hostid
BIN_HOSTNAME=/usr/bin/hostname

