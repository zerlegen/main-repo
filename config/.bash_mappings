# COMMANDS

## system information 

alias show-cpu-architecture=$BIN_ARCH
alias show-date=$BIN_DATE
alias set-date_MMddhhmmYYYY=$BIN_DATE 
alias get-host-id=$BIN_HOSTID
alias get-host-name=$BIN_HOSTNAME
alias get-ipc-status=$BIN_IPCS
alias get-user-default-locale_user="$BIN_LOCALE -u"
alias get-system-default-locale="$BIN_LOCALE -s"
alias show-environment-variables="$BIN_PRINTENV"
alias show-platform-info="$BIN_UNAME -a"



## devices

copy-device-data_src_dest_blocksize_blockcount() {
  $BIN_DD if=$1 of=$2 bs=$3 count=$4
}


## filesystem 
alias change-file-permissions_bitmask_file=$BIN_CHMOD
alias change-file-owner_username_file=$BIN_CHOWN
alias change-file-group_groupname_file=$BIN_CHGRP
alias change-selinux-security-context-of-file=$BIN_CHCON
alias copy-file_src_dest=$BIN_CP
alias copy-dir-tree_src_dest="$BIN_CP -R"
alias get-file-basename=basename
alias get-free-disk-space="$BIN_DF -h"
alias get-disk-usage-of-current-dir="$BIN_DU -h"
alias get-file-permissions="$BIN_GETFACL -a"
alias get-current-directory=$BIN_PWD
alias create-symbolic-link_target-file_link-name="$BIN_LN -s"
alias show-directories="$BIN_LS -ld"
alias show-all-files="$BIN_LS -alh"
alias make-directory_path="$BIN_MKDIR"
alias move-file=$BIN_MV
alias rename-file=$BIN_MV
alias view-symbolic-link=$BIN_READLINK
alias delete-empty-directory=$BIN_RMDIR
alias delete-file=$BIN_RM
alias delete-file-FORCE="$BIN_RM -f"
alias delete-tree="$BIN_RM -r"
alias get-file-status=$BIN_STAT
alias get-filesystem-status=$BIN_STAT
alias delete-tree-FORCE="$BIN_RM -rf"
alias show-printable-strings-in-file=$BIN_STRINGS
alias sync-filesystem-buffers=$BIN_SYNC
alias show-file-in-reverse=$BIN_TAC
alias show-end-of-file=$BIN_TAIL
alias watch-end-of-file=$BIN_TAILF
alias get-byte-count-of-file="$BIN_WC -c"
alias get-word-count-of-file="$BIN_WC -w"
alias get-line-count-of-file="$BIN_WC -l"
alias get-char-count-of-file="$BIN_WC -m"



### compression/encoding/decoding
alias compress-file-bzip2_infile=$BIN_BZIP2
alias uncompress-file-bzip2_infile="$BIN_BZIP2 -d"
alias uncompress-and-show-file-bzip2_infile="$BIN_BZIP2 -c -d"

compress-file-gzip_infile_outfile() {
  $BIN_GZIP -c $1 > $2
}

alias uncompress-file-gzip_infile="$BIN_GZIP -df"

alias get-hash-crc=$BIN_CKSUM
alias get-hash-crc32=$BIN_CRC32
alias get-hash-md5=$BIN_MD5SUM
alias get-hash-sha1=$BIN_SHA1SUM
alias get-hash-sha256=$BIN_SHA256SUM
alias get-hash-sha384=$BIN_SHA384SUM
alias get-hash-sha512=$BIN_SHA512SUM
alias encode-file-to-base64=$BIN_BASE64
alias decode-file-from-base64="$BIN_BASE64 -d"

alias convert-line-endings-to-dos=$BIN_UNIX2DOS
alias convert-line-endings-to-unix=$BIN_DOS2UNIX
alias convert-tabs-to-spaces_infile_outfile=$BIN_EXPAND
alias convert-spaces-to-tabs_infile_outfile=$BIN_UNEXPAND

alias get-file-type_infile=$BIN_FILE

view-file-hex_offset_file() {
  $BIN_HEXDUMP -C -s $1 $2 | less
}

alias show-character-encodings="$BIN_ICONV -l"
convert-character-encoding_incoding_outcoding_infile_outfile() {
  $BIN_ICONV -f $1 -t $2 $3 > $4 
}



## network 
alias start-ftp=$BIN_FTP
copy-tree-secure_local-str_remote-str() {
  $BIN_SCP -r $1 $2
}
alias download $BIN_WGET

## math
alias factor-integer_int=$BIN_FACTOR

## programming 
alias c-complier=$BIN_GCC
alias awk=$BIN_AWK
alias gnu-assembler=$BIN_AS
alias cpp-compiler="$BIN_GPP"
alias gnu-debugger=$BIN_GDB
alias gnu-linker=$BIN_LD
alias show-lib-dependencies_exe-or-lib=$BIN_LDD
alias gnu-make=$BIN_MAKE
alias show-binary-section-sizes_binary=$BIN_SIZE

## processes
send-signal_signal_process() {
  $BIN_KILL -$1 $2
}
alias show-signals="$BIN_KILL -l"
change-process-priority_priority_process-id() {
  $BIN_RENICE -n $1 $2 
}

## security

get-random-data_dest_blocksize_blockcount() {
  $BIN_DD if=/dev/random of=$1 bs=$2 count=$3
}

get-pseudo-random-data_dest_blocksize_blockcount() {
  $BIN_DD if=/dev/urandom of=$1 bs=$2 count=$3
}

## user accounts

alias get-groups-for-user_user=$BIN_GROUPS


get-current-user-ids_user() {
  $BIN_ID $1
}

get-selinux-security-context-of-user_user() {
  $BIN_ID -Z $1
}

## misc commands

alias show-calendar=$BIN_CAL
alias view-file-by-page=$BIN_LESS
alias view-file-elf="$BIN_READELF -a"
alias sort-file-lines_file="$BIN_SORT"
alias run-with-timeout=$BIN_TIMEOUT
alias generate-uuid=$BIN_UUIDGEN

